<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f0f0"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_width="match_parent">
    <GridLayout
        android:id="@+id/entity"
        android:background="@color/white"
        android:rowCount="1"
        android:columnCount="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="15sp"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/entity_logo"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@color/white"
            android:contentDescription="Logo"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/entity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.03"
                android:text="Netflix"
                android:textColor="#516b9e"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/entity_small_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="15 Dec - 6:20 AM"
                android:textColor="#516b9e"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/entity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_gravity="center_vertical|right"
                android:text=""
                android:textColor="#516b9e"
                android:textSize="23sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <TextView
                android:id="@+id/entity_holding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_gravity="center_vertical|right"
                android:text=""
                android:textColor="#516b9e"
                android:textSize="16sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/right_button"
            android:contentDescription="Next Page"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </GridLayout>
</androidx.cardview.widget.CardView>