<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp">
            <ImageView
                android:layout_marginTop="4sp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Logo"
                android:src="@drawable/logo21"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="20sp"
                android:textColor="#ddd"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/user_name"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKASH"
                android:textColor="#ddd"
                android:layout_below="@id/t1"
                android:textSize="28sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.04"
                tools:ignore="HardcodedText,UnusedAttribute" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="385sp"
            android:layout_height="200sp"
            android:orientation="vertical"
            android:background="@drawable/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Balance"
                android:textSize="22sp"
                android:textColor="#fff"
                android:paddingStart="40sp"
                android:paddingTop="50sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading ..."
                android:textSize="35sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:paddingStart="40sp"
                android:paddingTop="10sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <androidx.cardview.widget.CardView
                android:onClick="payPage"
                android:layout_width="90sp"
                android:layout_height="90sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#ff5d9e"
                android:layout_margin="15sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/coin"
                        android:contentDescription="Pay Button"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginTop="8sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="qrPage"
                android:layout_width="90sp"
                android:layout_height="90sp"
                app:cardElevation="10sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#aaaaaa"
                android:layout_margin="15sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/qr"
                        android:contentDescription="Bills Button"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR Code"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginTop="8sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entities_recycle_view"
            android:clipToPadding="true"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>